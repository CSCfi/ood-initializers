<style>
  body {
    font-family: 'museo-sans', sans-serif;
  }
  .form-group-invalid label::after {
    content: "‚ùó";
  }
  .form-group-invalid .form-control {
    color: red;
  }

  #new_batch_connect_session_context .nav-pills .nav-link:first-of-type {
    border: rgb(51, 122, 183) 1px solid;
    border-right: none;
    border-radius: 0.25rem 0 0 0.25rem;
  }

  #new_batch_connect_session_context .nav-pills .nav-link:not(:last-of-type, :first-of-type) {
    border-top: rgb(51, 122, 183) 1px solid;
    border-bottom: rgb(51, 122, 183) 1px solid;
    border-radius: 0;
  }

  #new_batch_connect_session_context .nav-pills .nav-link:last-of-type {
    border: rgb(51, 122, 183) 1px solid;
    border-left: none;
    border-radius: 0 0.25rem 0.25rem 0;
  }

  #new_batch_connect_session_context .form-group.nav-pills {
    margin-bottom: 0;
  }

  #new_batch_connect_session_context .text-muted {
    font-size: 0.9rem;
  }
</style>

