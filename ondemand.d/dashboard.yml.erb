dashboard_layout:
  rows:
    - columns:
      - width: 12
        widgets:
          - shared_style
          - csc_pinned_apps
          - notifications
          - grafana
pinned_apps:
  - "sys/files"
  - "sys/ood-persistent-ssh"
  - "sys/ood-shell"
  - "sys/ood-vnc/default"
  - "sys/ood-cloud-storage-conf"
  - "sys/activejobs"
  - "sys/ood-csc-status"
  - "sys/ood-disk-quotas"
  - "sys/ood-base-jupyter"
  - "sys/ood-course-jupyter"
  - "sys/ood-julia-jupyter"
  - "sys/ood-matlab-html"
  - "sys/ood-tensorboard"
  - "sys/ood-vscode"
pinned_apps_menu_length: 0

brand_bg_color: "#FFFFFF"
brand_link_active_bg_color: "#E9ECEF"
navbar_type: "light"

nav_bar:
  - files
  - jobs
  - title: "Apps"
    apps:
      - type: sys
        category: "Apps"
        profiles: "*{all,default}*"
  - "Tools"
  - sessions

custom_css_files: ['../assets/stylesheets/dashboard.css']
cancel_session_enabled: true
help_bar:
  - "develop"
  - title: "Profiles"
    links:
      - title: "Default"
        icon: "fa://cog"
        profile: "default"
      - title: "Industry"
        icon: "fa://cog"
        profile: "industry"
  - "help"
  - "user"
  - "log_out"

interactive_apps_menu:
  title: "Apps"
  links:
    - group: "Editors"
    - apps:
      - type: sys
        subcategory: "Editors"
        profiles: "*{all,default}*"
    - group: "Graphical applications"
    - apps:
      - type: sys
        subcategory: "Graphical applications"
        profiles: "*{all,default}*"
    - group: "Servers"
    - apps:
      - type: sys
        subcategory: "Servers"
        profiles: "*{all,default}*"
    - group: "Tools"
    - apps:
      - type: sys
        category: "Tools"
        profiles: "*{all,default}*"

profiles:
  industry:
    pinned_apps:
      - "sys/files"
      - "sys/ood-persistent-ssh"
      - "sys/ood-shell"
      - "sys/ood-cloud-storage-conf"
      - "sys/ood-csc-status"
      - type: sys
        profiles: "*{industry}*"
    interactive_apps_menu:
      title: "Apps"
      links:
        - group: "Batch"
        - apps:
          - type: sys
            subcategory: "Batch"
            profiles: "*{industry}*"
        - group: "Editors"
        - apps:
          - type: sys
            subcategory: "Editors"
            profiles: "*{industry}*"
        - group: "Graphical applications"
        - apps:
          - type: sys
            subcategory: "Graphical applications"
            profiles: "*{industry}*"
        - group: "Servers"
        - apps:
          - type: sys
            subcategory: "Servers"
            profiles: "*{industry}*"
        - group: "Tools"
        - apps:
          - type: sys
            category: "Tools"
            profiles: "*{industry}*"

custom_pages:
  empty: {}
  refresh_remotes:
    rows:
      - columns:
        - width: 12
          widgets:
            - refresh_remotes
<% if ["test", "staging", "future"].include?(ENV["SLURM_OOD_ENV"]) %>
  versions:
    rows:
      - columns:
        - width: 12
          widgets:
            - shared_style
            - versions
<% end %>
<% if File.directory?("/var/www/ood/apps/sys/ood-cloud-storage-conf") %>
  cloud_storage:
    rows:
      - columns:
        - width: 12
          widgets:
            - shared_style
            - cloud_storage
<% end %>
<%= CSCConfiguration.custom_page("disk_quotas", app: "ood-csc-status") -%>
<%= CSCConfiguration.custom_page("project_status", app: "ood-csc-status") -%>
