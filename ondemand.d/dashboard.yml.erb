dashboard_layout:
  rows:
    - columns:
      - width: 12
        widgets:
          - shared_style
          - csc_pinned_apps
          - notifications
          - grafana
pinned_apps:
  - "sys/files"
  - "sys/ood-persistent-ssh"
  - "sys/ood-shell"
  - "sys/ood-vnc"
  - "sys/ood-cloud-storage-conf"
  - "sys/activejobs"
  - "sys/ood-base-jupyter"
  - "sys/ood-course-jupyter"
  - "sys/ood-julia-jupyter"
  - "sys/ood-matlab-html"
  - "sys/ood-tensorboard"
  - "sys/ood-vscode"
pinned_apps_menu_length: 0

brand_bg_color: "#FFFFFF"
brand_link_active_bg_color: "#E9ECEF"
navbar_type: "light"

custom_css_files: ['../assets/stylesheets/dashboard.css']
cancel_session_enabled: true

custom_pages:
  empty: {}
  refresh_remotes:
    rows:
      - columns:
        - width: 12
          widgets:
            - refresh_remotes
<% if ["test", "staging", "future"].include?(ENV["SLURM_OOD_ENV"]) %>
  versions:
    rows:
      - columns:
        - width: 12
          widgets:
            - shared_style
            - versions
<% end %>
<% if File.directory?("/var/www/ood/apps/sys/ood-cloud-storage-conf") %>
  cloud_storage:
    rows:
      - columns:
        - width: 12
          widgets:
            - shared_style
            - cloud_storage
<% end %>
